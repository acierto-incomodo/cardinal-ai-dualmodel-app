{
  "name": "cardinal-ai",
  "version": "1.0.6",
  "description": "CardinalAI MultiModel App es una aplicación de escritorio que permite a los usuarios interactuar con múltiples modelos de IA de CardinalAI (de StormGamesStudios), proporcionando una interfaz fácil de usar para generar y gestionar contenido generado por inteligencia artificial.",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:linux:deb": "electron-builder --linux deb",
    "build:linux:snap": "electron-builder --linux snap",
    "build:linux:appimage": "electron-builder --linux AppImage",
    "build:linux:flatpak": "electron-builder --linux flatpak",
    "build:linux:flatpak2": "DEBUG=flatpak-bundler* npm run build:linux:flatpak",
    "build:linux:all": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0"
  },
  "homepage": "https://github.com/acierto-incomodo/cardinal-ai-dualmodel-app",
  "repository": {
    "type": "git",
    "url": "https://github.com/acierto-incomodo/cardinal-ai-dualmodel-app.git"
  },
  "author": {
    "name": "StormGamesStudios",
    "email": "meliodas.aitor@gmail.com"
  },
  "keywords": [
    "electron",
    "desktop",
    "application",
    "AI",
    "CardinalAI",
    "multi-model"
  ],
  "bugs": {
    "url": "https://github.com/acierto-incomodo/cardinal-ai-dualmodel-app/issues"
  },
  "license": "MIT",
  "build": {
    "appId": "com.stormgamesstudios.cardinal-ai",
    "productName": "CardinalAI",
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "cardinal-ai-dualmodel-app"
      }
    ],
    "files": [
      "src/**/*",
      "icons/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ],
      "icon": "icons/icon.ico",
      "artifactName": "CardinalAI-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "AppImage",
        "flatpak"
      ],
      "icon": "icons/",
      "category": "Utility",
      "maintainer": "StormGamesStudios <meliodas.aitor@gmail.com>",
      "vendor": "StormGamesStudios",
      "synopsis": "Aplicación de asistente de IA",
      "description": "Centro de asistente de la inteligencia artificial CardinalAI",
      "desktop": {
        "entry": {
          "Name": "CardinalAI",
          "Comment": "Centro de asistente de inteligencia artificial",
          "Keywords": "ai;assistant;cardinalai;desktop;",
          "Categories": "Network;Utility;"
        }
      }
    },
    "deb": {
      "artifactName": "CardinalAI-${version}-${arch}.${ext}",
      "depends": [
        "libgtk-3-0",
        "libnotify4",
        "libnss3",
        "libxss1",
        "libxtst6",
        "xdg-utils"
      ]
    },
    "snap": {
      "artifactName": "CardinalAI-${version}-${arch}.${ext}",
      "grade": "stable",
      "confinement": "strict",
      "plugs": [
        "network",
        "network-bind",
        "desktop",
        "desktop-legacy",
        "wayland",
        "x11",
        "browser-support",
        "opengl",
        "audio-playback"
      ]
    },
    "appImage": {
      "artifactName": "CardinalAI-${version}-${arch}.${ext}"
    },
    "flatpak": {
      "artifactName": "CardinalAI-${version}-${arch}.${ext}",
      "runtime": "org.freedesktop.Platform",
      "runtimeVersion": "23.08",
      "sdk": "org.freedesktop.Sdk",
      "base": "org.electronjs.Electron2.BaseApp",
      "baseVersion": "23.08",
      "finishArgs": [
        "--share=network",
        "--socket=x11",
        "--socket=wayland",
        "--device=dri",
        "--filesystem=home"
      ]
    }
  }
}
