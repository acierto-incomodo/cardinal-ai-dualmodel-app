{
  "appId": "com.stormgamesstudios.cardinalai",
  "productName": "Cardinal AI DualModel App",  
  "files": [
    "src/**/*"
  ],
  "extraResources": [
    {
      "from": "build/icon.ico",
      "to": "icon.ico"
    }
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64",
          "ia32"
        ]
      }
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "acierto-incomodo",
        "repo": "cardinal-ai-dualmodel-app",
        "releaseType": "release"
      }
    ]
  },
  "mac": {
    "target": "dmg"
  },
  "linux": {
    "target": "AppImage"
  },
  "nsis": {
    "oneClick": true,
    "perMachine": true,
    "allowToChangeInstallationDirectory": true
  }
}